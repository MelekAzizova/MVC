@model List<BlogListItemVM>
@{
    ViewData["Title"] = "Index";
}
<div class="card shadow mb-4">
    <a href="~/Admin/Create/Index" class="btn btn-outline-success">  Create</a>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Start date</th>
                        <th>Image</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>
                @foreach(var item in Model)
                {

                    <tr>@item.Id</tr>
                    <tr>@item.Name</tr>
                    <tr>@item.Title</tr>
                    <tr>@item.Author</tr>
                    <tr>@item.CreateAt</tr>
                    <tr>@item.Image</tr>
                    <td>
                        <a asp-controller="Blog" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                        <a asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>

                        
                    </td>
                }
            </table>
        </div>
    </div>
</div>


